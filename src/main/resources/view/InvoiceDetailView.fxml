<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="500.0" style="-fx-background-color: #1a1a1a;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.petclinic.controller.InvoiceDetailViewController">
    <children>
        <VBox spacing="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <!-- Header -->
                <HBox alignment="CENTER_LEFT" prefHeight="80.0" spacing="15.0" style="-fx-background-color: linear-gradient(to right, #000000, #1a1a1a); -fx-border-color: #333333; -fx-border-width: 0 0 2 0;">
                    <children>
                        <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../image/icons8-invoice-50.png" />
                            </image>
                        </ImageView>
                        <VBox spacing="2.0">
                            <children>
                                <Label fx:id="invoiceNumberLabel" style="-fx-text-fill: white; -fx-font-weight: bold;" text="INV00001">
                                    <font>
                                        <Font name="System Bold" size="24.0" />
                                    </font>
                                </Label>
                                <Label fx:id="invoiceDateLabel" style="-fx-text-fill: #999999; -fx-font-size: 13;" text="2024-01-15 10:30 AM">
                                    <font>
                                        <Font size="13.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                    <padding>
                        <Insets left="30.0" />
                    </padding>
                </HBox>

                <!-- Invoice Details -->
                <ScrollPane fitToWidth="true" prefHeight="440.0" style="-fx-background: #1a1a1a; -fx-background-color: #1a1a1a;" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox spacing="20.0">
                            <padding>
                                <Insets bottom="20.0" left="30.0" right="30.0" top="25.0" />
                            </padding>
                            <children>
                                <!-- Patient & Owner Info -->
                                <VBox spacing="10.0" style="-fx-background-color: #0d0d0d; -fx-background-radius: 12; -fx-border-color: #333333; -fx-border-radius: 12; -fx-border-width: 2; -fx-padding: 20;">
                                    <children>
                                        <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14;" text="Patient Information">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <Separator style="-fx-background-color: #333333;" />
                                        <HBox spacing="10.0">
                                            <children>
                                                <Label style="-fx-text-fill: #999999; -fx-min-width: 120;" text="Patient Name:" />
                                                <Label fx:id="petNameLabel" style="-fx-text-fill: white; -fx-font-weight: bold;" text="Max" />
                                            </children>
                                        </HBox>
                                        <HBox spacing="10.0">
                                            <children>
                                                <Label style="-fx-text-fill: #999999; -fx-min-width: 120;" text="Owner Name:" />
                                                <Label fx:id="ownerNameLabel" style="-fx-text-fill: white; -fx-font-weight: bold;" text="John Doe" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- Appointment Info -->
                                <VBox spacing="10.0" style="-fx-background-color: #0d0d0d; -fx-background-radius: 12; -fx-border-color: #333333; -fx-border-radius: 12; -fx-border-width: 2; -fx-padding: 20;">
                                    <children>
                                        <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14;" text="Appointment Details">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <Separator style="-fx-background-color: #333333;" />
                                        <HBox spacing="10.0">
                                            <children>
                                                <Label style="-fx-text-fill: #999999; -fx-min-width: 120;" text="Doctor:" />
                                                <Label fx:id="doctorNameLabel" style="-fx-text-fill: white; -fx-font-weight: bold;" text="Dr. Smith" />
                                            </children>
                                        </HBox>
                                        <HBox spacing="10.0">
                                            <children>
                                                <Label style="-fx-text-fill: #999999; -fx-min-width: 120;" text="Date &amp; Time:" />
                                                <Label fx:id="appointmentDateLabel" style="-fx-text-fill: white; -fx-font-weight: bold;" text="2024-01-15 10:00 AM" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- Charges Breakdown -->
                                <VBox spacing="10.0" style="-fx-background-color: #0d0d0d; -fx-background-radius: 12; -fx-border-color: #333333; -fx-border-radius: 12; -fx-border-width: 2; -fx-padding: 20;">
                                    <children>
                                        <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14;" text="Charges Breakdown">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <Separator style="-fx-background-color: #333333;" />

                                        <HBox spacing="10.0">
                                            <children>
                                                <Label style="-fx-text-fill: #999999; -fx-min-width: 180;" text="Consultation Fee:" />
                                                <Label fx:id="consultationFeeLabel" style="-fx-text-fill: #00ff88; -fx-font-weight: bold;" text="Rs. 1,500.00" HBox.hgrow="ALWAYS" />
                                            </children>
                                        </HBox>

                                        <HBox spacing="10.0">
                                            <children>
                                                <Label style="-fx-text-fill: #999999; -fx-min-width: 180;" text="Medicine Total:" />
                                                <Label fx:id="medicineTotalLabel" style="-fx-text-fill: #00ff88; -fx-font-weight: bold;" text="Rs. 2,000.00" HBox.hgrow="ALWAYS" />
                                            </children>
                                        </HBox>

                                        <Separator style="-fx-background-color: #404040;" />

                                        <HBox spacing="10.0">
                                            <children>
                                                <Label style="-fx-text-fill: #cccccc; -fx-min-width: 180;" text="Subtotal:" />
                                                <Label fx:id="subtotalLabel" style="-fx-text-fill: white; -fx-font-weight: bold;" text="Rs. 3,500.00" HBox.hgrow="ALWAYS" />
                                            </children>
                                        </HBox>

                                        <HBox spacing="10.0">
                                            <children>
                                                <Label style="-fx-text-fill: #ff6666; -fx-min-width: 180;" text="Discount:" />
                                                <Label fx:id="discountLabel" style="-fx-text-fill: #ff6666; -fx-font-weight: bold;" text="Rs. 500.00" HBox.hgrow="ALWAYS" />
                                            </children>
                                        </HBox>

                                        <Separator style="-fx-background-color: #00ff88;" />

                                        <HBox spacing="10.0">
                                            <children>
                                                <Label style="-fx-text-fill: white; -fx-min-width: 180; -fx-font-size: 16; -fx-font-weight: bold;" text="Total Amount:">
                                                    <font>
                                                        <Font name="System Bold" size="16.0" />
                                                    </font>
                                                </Label>
                                                <Label fx:id="totalAmountLabel" style="-fx-text-fill: #00ff88; -fx-font-weight: bold; -fx-font-size: 18;" text="Rs. 3,000.00" HBox.hgrow="ALWAYS">
                                                    <font>
                                                        <Font name="System Bold" size="18.0" />
                                                    </font>
                                                </Label>
                                            </children>
                                        </HBox>

                                        <HBox spacing="10.0">
                                            <children>
                                                <Label style="-fx-text-fill: #999999; -fx-min-width: 180;" text="Payment Status:" />
                                                <Label fx:id="paymentStatusLabel" style="-fx-background-color: #00ff88; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 15; -fx-background-radius: 12;" text="Completed" HBox.hgrow="ALWAYS" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- Medicine Details -->
                                <VBox fx:id="medicineDetailsBox" spacing="10.0" style="-fx-background-color: #0d0d0d; -fx-background-radius: 12; -fx-border-color: #333333; -fx-border-radius: 12; -fx-border-width: 2; -fx-padding: 20;">
                                    <children>
                                        <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14;" text="Medicine Details">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <Separator style="-fx-background-color: #333333;" />
                                        <VBox fx:id="medicineList" spacing="8.0" />
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </content>
                </ScrollPane>

                <!-- Close Button -->
                <HBox alignment="CENTER" prefHeight="80.0" style="-fx-background-color: #0d0d0d; -fx-border-color: #333333; -fx-border-width: 2 0 0 0;">
                    <children>
                        <Button fx:id="closeBtn" mnemonicParsing="false" onAction="#handleClose" prefHeight="45.0" prefWidth="150.0" style="-fx-background-color: white; -fx-text-fill: black; -fx-font-weight: bold; -fx-background-radius: 22; -fx-cursor: hand; -fx-font-size: 14; -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.4), 8, 0, 0, 0);" text="Close">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>