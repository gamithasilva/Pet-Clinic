<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="685.0" prefWidth="486.0" style="-fx-background-color: #1a1a1a;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.petclinic.controller.EditPetController">
    <children>
        <BorderPane prefHeight="600.0" prefWidth="500.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <top>
                <HBox alignment="CENTER" prefHeight="80.0" prefWidth="500.0" style="-fx-background-color: linear-gradient(to bottom, #000000, #1a1a1a); -fx-border-color: #404040; -fx-border-width: 0 0 2 0;" BorderPane.alignment="CENTER">
                    <children>
                        <Label style="-fx-text-fill: white; -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.3), 10, 0, 0, 0);" text="Add / Edit Pet">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
            </top>
            <center>
                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background: #1a1a1a; -fx-background-color: #1a1a1a;" vbarPolicy="AS_NEEDED" BorderPane.alignment="CENTER">
                    <content>
                        <VBox prefHeight="200.0" prefWidth="100.0" spacing="15.0" style="-fx-background-color: #1a1a1a;">
                            <children>
                                <!-- Image Section -->
                                <VBox alignment="CENTER" spacing="12.0" style="-fx-background-color: #0d0d0d; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 10, 0, 0, 2);">
                                    <children>
                                        <ImageView fx:id="petImageView" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, rgba(255,255,255,0.2), 8, 0, 0, 0);" />

                                        <Button fx:id="uploadImageBtn" onAction="#uploadImageBtn" style="-fx-background-color: white; -fx-text-fill: black; -fx-font-weight: bold; -fx-background-radius: 20; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.3), 5, 0, 0, 0);" text="Upload Image" />
                                    </children>
                                    <VBox.margin>
                                        <Insets left="20.0" right="20.0" top="10.0" />
                                    </VBox.margin>
                                </VBox>

                                <!-- Owner ID -->
                                <HBox alignment="CENTER_LEFT" prefHeight="40.0" spacing="10.0" style="-fx-background-color: #0d0d0d; -fx-background-radius: 8; -fx-padding: 5;">
                                    <children>
                                        <Label prefWidth="120.0" style="-fx-text-fill: #cccccc; -fx-font-weight: bold;" text="Owner ID:">
                                            <HBox.margin>
                                                <Insets left="15.0" />
                                            </HBox.margin>
                                        </Label>
                                        <ComboBox fx:id="ownerComboBox1" prefWidth="300.0" promptText="Select Owner" style="-fx-background-color: #262626; -fx-text-fill: white; -fx-prompt-text-fill: #666666; -fx-background-radius: 5; -fx-border-color: #404040; -fx-border-radius: 5; -fx-border-width: 1;" />
                                    </children>
                                    <VBox.margin>
                                        <Insets left="20.0" right="20.0" />
                                    </VBox.margin>
                                </HBox>

                                <!-- Pet Name -->
                                <HBox alignment="CENTER_LEFT" prefHeight="40.0" spacing="10.0" style="-fx-background-color: #0d0d0d; -fx-background-radius: 8; -fx-padding: 5;">
                                    <children>
                                        <Label prefWidth="120.0" style="-fx-text-fill: #cccccc; -fx-font-weight: bold;" text="Pet Name:">
                                            <HBox.margin>
                                                <Insets left="15.0" />
                                            </HBox.margin>
                                        </Label>
                                        <TextField fx:id="petNameField" prefWidth="300.0" promptText="Enter pet name" style="-fx-background-color: #262626; -fx-text-fill: white; -fx-prompt-text-fill: #666666; -fx-background-radius: 5; -fx-border-color: #404040; -fx-border-radius: 5; -fx-border-width: 1;" />
                                    </children>
                                    <VBox.margin>
                                        <Insets left="20.0" right="20.0" />
                                    </VBox.margin>
                                </HBox>

                                <!-- Species -->
                                <HBox alignment="CENTER_LEFT" prefHeight="40.0" spacing="10.0" style="-fx-background-color: #0d0d0d; -fx-background-radius: 8; -fx-padding: 5;">
                                    <children>
                                        <Label prefWidth="120.0" style="-fx-text-fill: #cccccc; -fx-font-weight: bold;" text="Species:">
                                            <HBox.margin>
                                                <Insets left="15.0" />
                                            </HBox.margin>
                                        </Label>
                                        <TextField fx:id="speciesField" prefWidth="300.0" promptText="e.g., Dog, Cat, Rabbit" style="-fx-background-color: #262626; -fx-text-fill: white; -fx-prompt-text-fill: #666666; -fx-background-radius: 5; -fx-border-color: #404040; -fx-border-radius: 5; -fx-border-width: 1;" />
                                    </children>
                                    <VBox.margin>
                                        <Insets left="20.0" right="20.0" />
                                    </VBox.margin>
                                </HBox>

                                <!-- Breed -->
                                <HBox alignment="CENTER_LEFT" prefHeight="40.0" spacing="10.0" style="-fx-background-color: #0d0d0d; -fx-background-radius: 8; -fx-padding: 5;">
                                    <children>
                                        <Label prefWidth="120.0" style="-fx-text-fill: #cccccc; -fx-font-weight: bold;" text="Breed:">
                                            <HBox.margin>
                                                <Insets left="15.0" />
                                            </HBox.margin>
                                        </Label>
                                        <TextField fx:id="breedField" prefWidth="300.0" promptText="Enter breed" style="-fx-background-color: #262626; -fx-text-fill: white; -fx-prompt-text-fill: #666666; -fx-background-radius: 5; -fx-border-color: #404040; -fx-border-radius: 5; -fx-border-width: 1;" />
                                    </children>
                                    <VBox.margin>
                                        <Insets left="20.0" right="20.0" />
                                    </VBox.margin>
                                </HBox>

                                <!-- Gender -->
                                <HBox alignment="CENTER_LEFT" prefHeight="40.0" spacing="10.0" style="-fx-background-color: #0d0d0d; -fx-background-radius: 8; -fx-padding: 5;">
                                    <children>
                                        <Label prefWidth="120.0" style="-fx-text-fill: #cccccc; -fx-font-weight: bold;" text="Gender:">
                                            <HBox.margin>
                                                <Insets left="15.0" />
                                            </HBox.margin>
                                        </Label>
                                        <ComboBox fx:id="genderComboBox" prefWidth="300.0" promptText="Select gender" style="-fx-background-color: #262626; -fx-text-fill: white; -fx-prompt-text-fill: #666666; -fx-background-radius: 5; -fx-border-color: #404040; -fx-border-radius: 5; -fx-border-width: 1;" />
                                    </children>
                                    <VBox.margin>
                                        <Insets left="20.0" right="20.0" />
                                    </VBox.margin>
                                </HBox>

                                <!-- Date of Birth -->
                                <HBox alignment="CENTER_LEFT" prefHeight="40.0" spacing="10.0" style="-fx-background-color: #0d0d0d; -fx-background-radius: 8; -fx-padding: 5;">
                                    <children>
                                        <Label prefWidth="120.0" style="-fx-text-fill: #cccccc; -fx-font-weight: bold;" text="Date of Birth:">
                                            <HBox.margin>
                                                <Insets left="15.0" />
                                            </HBox.margin>
                                        </Label>
                                        <DatePicker fx:id="dobPicker" prefWidth="300.0" promptText="Select date" style="-fx-background-color: #262626; -fx-text-fill: white; -fx-prompt-text-fill: #666666; -fx-background-radius: 5; -fx-border-color: #404040; -fx-border-radius: 5; -fx-border-width: 1;" />
                                    </children>
                                    <VBox.margin>
                                        <Insets left="20.0" right="20.0" />
                                    </VBox.margin>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="10.0" top="15.0" />
                            </padding>
                        </VBox>
                    </content>
                </ScrollPane>
            </center>
            <bottom>
                <HBox alignment="CENTER_RIGHT" prefHeight="80.0" prefWidth="500.0" spacing="15.0" style="-fx-background-color: linear-gradient(to top, #000000, #1a1a1a); -fx-border-color: #404040; -fx-border-width: 2 0 0 0;" BorderPane.alignment="CENTER">
                    <children>
                        <Button fx:id="saveBtn" onAction="#savePet" prefHeight="40.0" prefWidth="110.0" style="-fx-background-color: white; -fx-text-fill: black; -fx-font-weight: bold; -fx-font-size: 14; -fx-background-radius: 20; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.4), 8, 0, 0, 0);" text="Save" />
                        <Button fx:id="cancelBtn" onAction="#cancel" prefHeight="40.0" prefWidth="110.0" style="-fx-background-color: #333333; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14; -fx-background-radius: 20; -fx-border-color: #666666; -fx-border-radius: 20; -fx-border-width: 2; -fx-cursor: hand;" text="Cancel" />
                    </children>
                    <padding>
                        <Insets right="25.0" />
                    </padding>
                </HBox>
            </bottom>
        </BorderPane>
    </children>
</AnchorPane>
