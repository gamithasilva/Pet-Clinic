<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<?import java.lang.String?>
<AnchorPane prefHeight="650.0" prefWidth="700.0" style="-fx-background-color: #1a1a1a;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.petclinic.controller.AddInvoiceFormController">
    <children>
        <VBox spacing="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <!-- Header -->
                <HBox alignment="CENTER_LEFT" prefHeight="80.0" spacing="15.0" style="-fx-background-color: linear-gradient(to right, #000000, #1a1a1a); -fx-border-color: #333333; -fx-border-width: 0 0 2 0;">
                    <children>
                        <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../image/icons8-invoice-50.png" />
                            </image>
                        </ImageView>
                        <VBox spacing="2.0">
                            <children>
                                <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="Create New Invoice">
                                    <font>
                                        <Font name="System Bold" size="24.0" />
                                    </font>
                                </Label>
                                <Label style="-fx-text-fill: #999999; -fx-font-size: 13;" text="Generate invoice for completed appointment">
                                    <font>
                                        <Font size="13.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                    <padding>
                        <Insets left="30.0" />
                    </padding>
                </HBox>

                <!-- Form Content -->
                <ScrollPane fitToWidth="true" prefHeight="490.0" style="-fx-background: #1a1a1a; -fx-background-color: #1a1a1a;" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox spacing="20.0">
                            <padding>
                                <Insets bottom="20.0" left="30.0" right="30.0" top="25.0" />
                            </padding>
                            <children>
                                <!-- Appointment Selection -->
                                <VBox spacing="8.0">
                                    <children>
                                        <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14;" text="Select Completed Appointment">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <ComboBox fx:id="appointmentComboBox" prefHeight="45.0" prefWidth="640.0" promptText="Choose appointment..." style="-fx-background-color: #0d0d0d; -fx-border-color: #333333; -fx-border-radius: 8; -fx-background-radius: 8; -fx-border-width: 2;">
                                            <styleClass>
                                                <String fx:value="combo-box" />
                                            </styleClass>
                                        </ComboBox>
                                    </children>
                                </VBox>

                                <Separator style="-fx-background-color: #333333;" />

                                <!-- Invoice Details Section -->
                                <VBox spacing="15.0">
                                    <children>
                                        <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14;" text="Invoice Details">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>

                                        <!-- Two Column Layout -->
                                        <GridPane hgap="20.0" vgap="15.0">
                                            <columnConstraints>
                                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" />
                                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" />
                                            </columnConstraints>
                                            <children>
                                                <!-- Invoice Number -->
                                                <VBox spacing="6.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                                    <children>
                                                        <Label style="-fx-text-fill: #cccccc; -fx-font-size: 12;" text="Invoice Number">
                                                            <font>
                                                                <Font size="12.0" />
                                                            </font>
                                                        </Label>
                                                        <TextField fx:id="invoiceNumberField" editable="false" prefHeight="40.0" style="-fx-background-color: #262626; -fx-text-fill: white; -fx-border-color: #404040; -fx-border-radius: 8; -fx-background-radius: 8; -fx-border-width: 2; -fx-font-size: 13;">
                                                            <font>
                                                                <Font size="13.0" />
                                                            </font>
                                                        </TextField>
                                                    </children>
                                                </VBox>

                                                <!-- Patient Name -->
                                                <VBox spacing="6.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                                    <children>
                                                        <Label style="-fx-text-fill: #cccccc; -fx-font-size: 12;" text="Patient Name">
                                                            <font>
                                                                <Font size="12.0" />
                                                            </font>
                                                        </Label>
                                                        <TextField fx:id="petNameField" editable="false" prefHeight="40.0" style="-fx-background-color: #262626; -fx-text-fill: white; -fx-border-color: #404040; -fx-border-radius: 8; -fx-background-radius: 8; -fx-border-width: 2; -fx-font-size: 13;">
                                                            <font>
                                                                <Font size="13.0" />
                                                            </font>
                                                        </TextField>
                                                    </children>
                                                </VBox>

                                                <!-- Owner Name -->
                                                <VBox spacing="6.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                                    <children>
                                                        <Label style="-fx-text-fill: #cccccc; -fx-font-size: 12;" text="Owner Name">
                                                            <font>
                                                                <Font size="12.0" />
                                                            </font>
                                                        </Label>
                                                        <TextField fx:id="ownerNameField" editable="false" prefHeight="40.0" style="-fx-background-color: #262626; -fx-text-fill: white; -fx-border-color: #404040; -fx-border-radius: 8; -fx-background-radius: 8; -fx-border-width: 2; -fx-font-size: 13;">
                                                            <font>
                                                                <Font size="13.0" />
                                                            </font>
                                                        </TextField>
                                                    </children>
                                                </VBox>

                                                <!-- Doctor Name -->
                                                <VBox spacing="6.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                                    <children>
                                                        <Label style="-fx-text-fill: #cccccc; -fx-font-size: 12;" text="Doctor">
                                                            <font>
                                                                <Font size="12.0" />
                                                            </font>
                                                        </Label>
                                                        <TextField fx:id="doctorNameField" editable="false" prefHeight="40.0" style="-fx-background-color: #262626; -fx-text-fill: white; -fx-border-color: #404040; -fx-border-radius: 8; -fx-background-radius: 8; -fx-border-width: 2; -fx-font-size: 13;">
                                                            <font>
                                                                <Font size="13.0" />
                                                            </font>
                                                        </TextField>
                                                    </children>
                                                </VBox>

                                                <!-- Appointment Date -->
                                                <VBox spacing="6.0" GridPane.columnIndex="0" GridPane.rowIndex="2">
                                                    <children>
                                                        <Label style="-fx-text-fill: #cccccc; -fx-font-size: 12;" text="Appointment Date">
                                                            <font>
                                                                <Font size="12.0" />
                                                            </font>
                                                        </Label>
                                                        <TextField fx:id="appointmentDateField" editable="false" prefHeight="40.0" style="-fx-background-color: #262626; -fx-text-fill: white; -fx-border-color: #404040; -fx-border-radius: 8; -fx-background-radius: 8; -fx-border-width: 2; -fx-font-size: 13;">
                                                            <font>
                                                                <Font size="13.0" />
                                                            </font>
                                                        </TextField>
                                                    </children>
                                                </VBox>
                                            </children>
                                        </GridPane>
                                    </children>
                                </VBox>

                                <Separator style="-fx-background-color: #333333;" />

                                <!-- Charges Section -->
                                <VBox spacing="15.0">
                                    <children>
                                        <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14;" text="Charges Breakdown">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>

                                        <GridPane hgap="20.0" vgap="15.0">
                                            <columnConstraints>
                                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" />
                                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" />
                                            </columnConstraints>
                                            <children>
                                                <!-- Consultation Fee -->
                                                <VBox spacing="6.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                                    <children>
                                                        <Label style="-fx-text-fill: #cccccc; -fx-font-size: 12;" text="Consultation Fee (Rs.)">
                                                            <font>
                                                                <Font size="12.0" />
                                                            </font>
                                                        </Label>
                                                        <TextField fx:id="consultationFeeField" editable="false" prefHeight="40.0" style="-fx-background-color: #262626; -fx-text-fill: #00ff88; -fx-border-color: #404040; -fx-border-radius: 8; -fx-background-radius: 8; -fx-border-width: 2; -fx-font-size: 13; -fx-font-weight: bold;">
                                                            <font>
                                                                <Font name="System Bold" size="13.0" />
                                                            </font>
                                                        </TextField>
                                                    </children>
                                                </VBox>

                                                <!-- Medicine Total -->
                                                <VBox spacing="6.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                                    <children>
                                                        <Label style="-fx-text-fill: #cccccc; -fx-font-size: 12;" text="Medicine Total (Rs.)">
                                                            <font>
                                                                <Font size="12.0" />
                                                            </font>
                                                        </Label>
                                                        <TextField fx:id="medicineTotalField" editable="false" prefHeight="40.0" style="-fx-background-color: #262626; -fx-text-fill: #00ff88; -fx-border-color: #404040; -fx-border-radius: 8; -fx-background-radius: 8; -fx-border-width: 2; -fx-font-size: 13; -fx-font-weight: bold;">
                                                            <font>
                                                                <Font name="System Bold" size="13.0" />
                                                            </font>
                                                        </TextField>
                                                    </children>
                                                </VBox>

                                                <!-- Discount -->
                                                <VBox spacing="6.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                                    <children>
                                                        <Label style="-fx-text-fill: #cccccc; -fx-font-size: 12;" text="Discount (Rs.)">
                                                            <font>
                                                                <Font size="12.0" />
                                                            </font>
                                                        </Label>
                                                        <TextField fx:id="discountField" prefHeight="40.0" promptText="0.00" style="-fx-background-color: #0d0d0d; -fx-text-fill: white; -fx-prompt-text-fill: #666666; -fx-border-color: #00ff88; -fx-border-radius: 8; -fx-background-radius: 8; -fx-border-width: 2; -fx-font-size: 13;">
                                                            <font>
                                                                <Font size="13.0" />
                                                            </font>
                                                        </TextField>
                                                    </children>
                                                </VBox>

                                                <!-- Total Amount -->
                                                <VBox spacing="6.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                                    <children>
                                                        <Label style="-fx-text-fill: #cccccc; -fx-font-size: 12;" text="Total Amount (Rs.)">
                                                            <font>
                                                                <Font size="12.0" />
                                                            </font>
                                                        </Label>
                                                        <TextField fx:id="totalAmountField" editable="false" prefHeight="40.0" style="-fx-background-color: #1a4d2e; -fx-text-fill: #00ff88; -fx-border-color: #00ff88; -fx-border-radius: 8; -fx-background-radius: 8; -fx-border-width: 2; -fx-font-size: 16; -fx-font-weight: bold;">
                                                            <font>
                                                                <Font name="System Bold" size="16.0" />
                                                            </font>
                                                        </TextField>
                                                    </children>
                                                </VBox>
                                            </children>
                                        </GridPane>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </content>
                </ScrollPane>

                <!-- Action Buttons -->
                <HBox alignment="CENTER" prefHeight="80.0" spacing="15.0" style="-fx-background-color: #0d0d0d; -fx-border-color: #333333; -fx-border-width: 2 0 0 0;">
                    <children>
                        <Button fx:id="cancelBtn" mnemonicParsing="false" onAction="#handleCancel" prefHeight="45.0" prefWidth="150.0" style="-fx-background-color: #262626; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 22; -fx-border-color: #404040; -fx-border-radius: 22; -fx-border-width: 2; -fx-cursor: hand; -fx-font-size: 14;" text="Cancel">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                        <Button fx:id="createBtn" mnemonicParsing="false" onAction="#handleCreate" prefHeight="45.0" prefWidth="200.0" style="-fx-background-color: white; -fx-text-fill: black; -fx-font-weight: bold; -fx-background-radius: 22; -fx-cursor: hand; -fx-font-size: 14; -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.4), 8, 0, 0, 0);" text="Create Invoice">
                            <graphic>
                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../image/icons8-add-30.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>