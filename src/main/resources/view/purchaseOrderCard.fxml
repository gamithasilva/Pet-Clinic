<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="70.0" prefWidth="1011.0" style="-fx-background-color: #0d0d0d; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #333333; -fx-border-width: 2; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.6), 10, 0, 0, 3);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.petclinic.controller.PurchaseOrderCardController">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <!-- Order ID Section with Icon -->
                <HBox alignment="CENTER" prefHeight="70.0" prefWidth="100.0" spacing="8.0" style="-fx-background-color: #1a1a1a; -fx-background-radius: 12 0 0 12; -fx-border-color: #333333; -fx-border-width: 0 1 0 0;">
                    <children>
                        <Label fx:id="orderId" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14;" text="PO001">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>

                <!-- Supplier Section -->
                <VBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="200.0" spacing="2.0">
                    <children>
                        <Label style="-fx-text-fill: #666666; -fx-font-size: 10;" text="Supplier">
                            <font>
                                <Font size="10.0" />
                            </font>
                        </Label>
                        <Label fx:id="supplierName" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14;" text="MedSupply Lanka">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                    </children>
                    <HBox.margin>
                        <Insets left="5.0" />
                    </HBox.margin>
                </VBox>

                <!-- Order Date Section -->
                <VBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="130.0" spacing="2.0">
                    <children>
                        <Label style="-fx-text-fill: #666666; -fx-font-size: 10;" text="Order Date">
                            <font>
                                <Font size="10.0" />
                            </font>
                        </Label>
                        <Label fx:id="orderDate" style="-fx-text-fill: #cccccc; -fx-font-size: 12;" text="2024-01-15">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <!-- Total Amount Section -->
                <VBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="150.0" spacing="2.0">
                    <children>
                        <Label style="-fx-text-fill: #666666; -fx-font-size: 10;" text="Total Amount">
                            <font>
                                <Font size="10.0" />
                            </font>
                        </Label>
                        <Label fx:id="totalAmount" style="-fx-text-fill: #00ff88; -fx-font-weight: bold; -fx-font-size: 14;" text="Rs. 15,000.00">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <!-- Status Section -->
                <VBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="130.0" spacing="2.0">
                    <children>
                        <Label style="-fx-text-fill: #666666; -fx-font-size: 10;" text="Status">
                            <font>
                                <Font size="10.0" />
                            </font>
                        </Label>
                        <Label fx:id="status" style="-fx-background-color: linear-gradient(to right, #ff9933, #ffaa55); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 11; -fx-background-radius: 12; -fx-padding: 4 12 4 12; -fx-border-color: #ffaa55; -fx-border-radius: 12; -fx-border-width: 1;" text="Pending">
                            <font>
                                <Font name="System Bold" size="11.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <!-- Action Buttons Section -->
                <HBox alignment="CENTER" prefHeight="70.0" prefWidth="260.0" spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <!-- View Details Button -->
                        <Button fx:id="viewBtn" mnemonicParsing="false" onAction="#viewOrder" prefHeight="36.0" prefWidth="90.0" style="-fx-background-color: #404040; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 18; -fx-cursor: hand; -fx-font-size: 11; -fx-border-color: #666666; -fx-border-radius: 18; -fx-border-width: 1;" text="View">
                            <graphic>
                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../image/icons8-eye-50.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                            <font>
                                <Font name="System Bold" size="11.0" />
                            </font>
                        </Button>

                        <!-- Receive Button -->
                        <Button fx:id="receiveBtn" mnemonicParsing="false" onAction="#receiveOrder" prefHeight="36.0" prefWidth="90.0" style="-fx-background-color: white; -fx-text-fill: black; -fx-font-weight: bold; -fx-background-radius: 18; -fx-cursor: hand; -fx-font-size: 11; -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.3), 5, 0, 0, 0);" text="Receive">
                            <graphic>
                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../image/icons8-checkmark-50.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                            <font>
                                <Font name="System Bold" size="11.0" />
                            </font>
                        </Button>

                        <!-- Delete Button -->
                        <Button fx:id="deleteBtn" mnemonicParsing="false" onAction="#deleteOrder" prefHeight="36.0" prefWidth="50.0" style="-fx-background-color: #262626; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 18; -fx-border-color: #666666; -fx-border-radius: 18; -fx-border-width: 2; -fx-cursor: hand;">
                            <graphic>
                                <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../image/icons8-delete-96.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                    <HBox.margin>
                        <Insets right="15.0" />
                    </HBox.margin>
                </HBox>
            </children>
            <padding>
                <Insets left="5.0" right="5.0" />
            </padding>
        </HBox>
    </children>
</AnchorPane>
