<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="80.0" prefWidth="1011.0" style="-fx-background-color: #0d0d0d; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #333333; -fx-border-width: 2; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.6), 10, 0, 0, 3);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.petclinic.controller.InvoiceCardController">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <!-- Invoice ID Section -->
                <HBox alignment="CENTER" prefHeight="80.0" prefWidth="100.0" spacing="8.0" style="-fx-background-color: #1a1a1a; -fx-background-radius: 12 0 0 12; -fx-border-color: #333333; -fx-border-width: 0 1 0 0;">
                    <children>
                        <Label fx:id="invoiceId" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14;" text="INV001">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>

                <!-- Pet & Owner Section -->
                <VBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="180.0" spacing="2.0">
                    <children>
                        <Label style="-fx-text-fill: #666666; -fx-font-size: 10;" text="Patient">
                            <font>
                                <Font size="10.0" />
                            </font>
                        </Label>
                        <Label fx:id="petNameLabel" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 13;" text="Max">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Label>
                        <Label fx:id="ownerNameLabel" style="-fx-text-fill: #999999; -fx-font-size: 11;" text="John Doe">
                            <font>
                                <Font size="11.0" />
                            </font>
                        </Label>
                    </children>
                    <HBox.margin>
                        <Insets left="5.0" />
                    </HBox.margin>
                </VBox>

                <!-- Appointment Date Section -->
                <VBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="130.0" spacing="2.0">
                    <children>
                        <Label style="-fx-text-fill: #666666; -fx-font-size: 10;" text="Date">
                            <font>
                                <Font size="10.0" />
                            </font>
                        </Label>
                        <Label fx:id="dateLabel" style="-fx-text-fill: #cccccc; -fx-font-size: 12;" text="2024-01-15">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <!-- Doctor Section -->
                <VBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="150.0" spacing="2.0">
                    <children>
                        <Label style="-fx-text-fill: #666666; -fx-font-size: 10;" text="Doctor">
                            <font>
                                <Font size="10.0" />
                            </font>
                        </Label>
                        <Label fx:id="doctorNameLabel" style="-fx-text-fill: #cccccc; -fx-font-size: 12;" text="Dr. Smith">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <!-- Total Amount Section -->
                <VBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="140.0" spacing="2.0">
                    <children>
                        <Label style="-fx-text-fill: #666666; -fx-font-size: 10;" text="Total Amount">
                            <font>
                                <Font size="10.0" />
                            </font>
                        </Label>
                        <Label fx:id="totalAmountLabel" style="-fx-text-fill: #00ff88; -fx-font-weight: bold; -fx-font-size: 15;" text="Rs. 3,000.00">
                            <font>
                                <Font name="System Bold" size="15.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <!-- Payment Status Section -->
                <VBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="120.0" spacing="2.0">
                    <children>
                        <Label style="-fx-text-fill: #666666; -fx-font-size: 10;" text="Payment">
                            <font>
                                <Font size="10.0" />
                            </font>
                        </Label>
                        <Label fx:id="paymentStatusLabel" style="-fx-background-color: linear-gradient(to right, #00cc66, #00ff88); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 11; -fx-background-radius: 12; -fx-padding: 4 12 4 12; -fx-border-color: #00ff88; -fx-border-radius: 12; -fx-border-width: 1;" text="Completed">
                            <font>
                                <Font name="System Bold" size="11.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <!-- Action Buttons Section -->
                <HBox alignment="CENTER" prefHeight="80.0" prefWidth="180.0" spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <!-- View Details Button -->
                        <Button fx:id="viewBtn" mnemonicParsing="false" onAction="#viewInvoice" prefHeight="36.0" prefWidth="80.0" style="-fx-background-color: white; -fx-text-fill: black; -fx-font-weight: bold; -fx-background-radius: 18; -fx-cursor: hand; -fx-font-size: 11; -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.3), 5, 0, 0, 0);" text="View">
                            <graphic>
                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../image/icons8-eye-50.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                            <font>
                                <Font name="System Bold" size="11.0" />
                            </font>
                        </Button>

                        <!-- Print Button -->
                        <Button fx:id="printBtn" mnemonicParsing="false" onAction="#printInvoice" prefHeight="36.0" prefWidth="80.0" style="-fx-background-color: #404040; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 18; -fx-cursor: hand; -fx-font-size: 11; -fx-border-color: #666666; -fx-border-radius: 18; -fx-border-width: 1;" text="Print">
                            <graphic>
                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../image/icons8-print-50.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                            <font>
                                <Font name="System Bold" size="11.0" />
                            </font>
                        </Button>
                    </children>
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin>
                </HBox>
            </children>
            <padding>
                <Insets left="5.0" right="5.0" />
            </padding>
        </HBox>
    </children>
</AnchorPane>